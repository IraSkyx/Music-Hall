<Window x:Class="MyApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        BorderThickness=".5"
        BorderBrush="#ECF0F1"
        Background="#222222"
        Title="Inscription" Height="500" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="reduce" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" Click="Reduce" Content="―" BorderThickness="0" FontSize="20" FontFamily="Arual" Height="30" Width="45"/>
            <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" Click="Increase" Content="⇱" VerticalContentAlignment="Center" BorderThickness="0" FontSize="20" FontFamily="Arual" Height="30" Width="45"/>
            <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverQuit}" Click="Exit" Content="✗" Width="45" Height="30" BorderThickness="0" FontSize="20" FontFamily="Arual"/>
        </StackPanel>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Label x:Name="inscrire" HorizontalContentAlignment="Center" Grid.Row="0" Content="S'inscrire" Foreground="White" FontWeight="Bold" FontSize="35" FontStyle="Italic" Margin="30"/>

            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <Label x:Name="labelpseudo" Content="Pseudo" Foreground="White" Height="30" Width="120"/>
                <TextBox x:Name="pseudo" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" Height="23" Width="120"/>

                <Label x:Name="labelemail" Content="Adresse e-mail" Foreground="White" Grid.Row="1" Height="30" Width="120"/>
                <TextBox x:Name="email" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Height="23" Width="120"/>

                <Label x:Name="labelmdp" Content="Mot de passe" Foreground="White" Grid.Row="2" Height="30" Width="120"/>
                <PasswordBox x:Name="mdp" Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" Height="23" Width="120"/>

            </Grid>

            <Button x:Name="valider" Content="Valider" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Width="100" Height="35" Grid.Row="2" Margin="50"/>
            
        </Grid>
    </DockPanel>
</Window>