<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#95A5A6"      
        BorderThickness="0"
        BorderBrush="#ECF0F1"     
        Title="Music'Hall" Height="720" Width="1080" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Foreground="White" FontFamily="Microsoft YaHei Light">

    <DockPanel Background="#ECF0F1" Margin="0">
        
        <!--En-tête-->
        <StackPanel x:Name="Panel" DockPanel.Dock="Top" FlowDirection="RightToLeft" Orientation="Horizontal" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#222222">
            <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverQuit}" ToolTip="Fermer" Click="Exit" Content="✗" Width="60" FontSize="20" BorderThickness="0"/>
            <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Rétablir précédent" Click="Increase" Content="⇱" Width="60" FontSize="20" BorderThickness="0" />
            <Button x:Name="reduce" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Réduire" Click="Reduce" Content="―" FontSize="20" Width="60" BorderThickness="0"/>
            <Button x:Name="connexion" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Se connecter" Click="Connexion" Content="Connexion" Width="100" BorderThickness="0"/>
            <Button x:Name="inscription" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="S'inscrire" Click="Inscription" Content="Inscription" Width="100" BorderThickness="0"/>
        </StackPanel>
        <!--En-tête-->

        <!-- Lecteur -->
        <StackPanel x:Name="FullPlayer" DockPanel.Dock="Bottom" Background="#222222">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="Add" Text="✚" Visibility="Hidden" FontSize="20" Margin="20" VerticalAlignment="Center" TextAlignment="Center" MouseUp="AddToPlaylist2"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MouseUp="SeeMusic2">
                        <Image x:Name="image" Width="60" Height="60"/>
                        <TextBlock x:Name="title" FontSize="15"/>
                        <TextBlock x:Name="artist" FontSize="10"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="duration" TextAlignment="Center" VerticalAlignment="Center"/>
                        <ProgressBar x:Name="Prog" MouseUp="ProgMouseClick" Height="10" Width="350" Value="0" Background="Transparent" Margin="10" Foreground="White"/>
                        <TextBlock x:Name="duration2" TextAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="previous" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="Previous" ToolTip="Précédent" Content="◀◀" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="random" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="SetRandom" ToolTip="Lecture aléatoire" Content="∞" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="PausePlay" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="PausePlay_Click" ToolTip="Lecture" Content="▶" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="replay" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="Replay" ToolTip="Lecture en boucle" Content="⟲" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="next" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="Next" ToolTip="Suivant" Content="▶▶" Width="50" Height="50" FontSize="22"/>
                    </StackPanel>
                    <Slider x:Name="slider" Style="{StaticResource CustomSlider}" Width="135" Value="{Binding Volume}" Minimum="0" Maximum="1" ToolTip="Modifier le volume" Margin="0,10,0,10" IsMoveToPointEnabled="True"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!-- Lecteur -->

        <!-- Corps -->
        <DockPanel>

            <ListView x:Name="scroller" DockPanel.Dock="Top" Style="{StaticResource HorizontalListbox}" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" ItemsSource="{Binding All}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionChanged="scroller_SelectionChanged" Height="100" Margin="10,30" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image Height="50" Width="50" Source="{Binding Image}"/>
                            <TextBlock Text="{Binding Title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListView>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30">

                <!-- Onglets -->
                <TabControl x:Name="TabControl" BorderThickness="0" Width="800" Margin="0,0,70,0" Opacity="0.9" Background="#222222">

                    <TabItem Header="Accueil" Foreground="White" FontFamily="Microsoft YaHei UI" Margin="-3,0,3,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel x:Name="hall" Margin="20"  VerticalAlignment="Bottom" MouseUp="StackPanel_MouseUp">
                                <TextBlock Text="Top 1 Music'Hall" FontSize="20" Margin="10" TextAlignment="Center"/>
                                <Image Source="{StaticResource aintme}" Width="150" ToolTip="Cliquer pour + d'infos"/>
                            </StackPanel>
                            <StackPanel x:Name="world" Margin="20" Grid.Column="1" VerticalAlignment="Top" MouseUp="StackPanel_MouseUp">
                                <Image Source="{StaticResource feder}" Width="150" ToolTip="Cliquer pour + d'infos"/>
                                <TextBlock Text="Top 1 World" FontSize="20" Margin="10" TextAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="france" Margin="20" Grid.Column="2" VerticalAlignment="Center" MouseUp="StackPanel_MouseUp">
                                <TextBlock Text="Top 1 France" FontSize="20" Margin="10" TextAlignment="Center"/>
                                <Image Source="{StaticResource paris}" Width="150" ToolTip="Cliquer pour + d'infos"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Sélection" FontFamily="Microsoft YaHei UI" Foreground="White" Margin="-4,0,4,0">
                        <Grid x:Name="Selection">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="30">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Height="120" Source="{Binding ElementName=scroller, Path=SelectedItem.Image}">
                                    <Image.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" ShadowDepth="10" Softness="1" Opacity="0.5"/>
                                    </Image.BitmapEffect>
                                </Image>
                                <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Title}" FontSize="20"/>
                                <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Artist}"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" Grid.Column="2">
                                <TabControl Background="#222222" Margin="20">
                                    <TabItem Header="Infos"  Foreground="White">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Infos}" Margin="30" FontSize="20"/>
                                            <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Date}" Margin="30" FontSize="20"/>
                                        </StackPanel>
                                    </TabItem>
                                    <TabItem Header="Etc" Foreground="White"/>
                                    <TabItem Header="Etc" Foreground="White"/>
                                </TabControl>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Margin="20" ToolTip="Lire la musique" Content="▶" Click="Play" Width="40" Height="40"/>
                                    <Button Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Margin="20" ToolTip="Cliquer pour ajouter" Content="+ Ajouter à ma playlist" Click="AddToPlaylist"  Width="150" Height="40"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Recherche" FontFamily="Microsoft YaHei UI" Foreground="White" Margin="-5,0,5,0">
                        <DockPanel Margin="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">
                                <TextBox x:Name="Input" DockPanel.Dock="Top" TextChanged="TextBox_TextChanged" Width="200" Margin="0,0,20,0"/>
                                <ComboBox x:Name="criterion" SelectionChanged="criterion_SelectionChanged">
                                    <ComboBoxItem x:Name="bytitle" Content="Par titre" IsSelected="False"/>
                                    <ComboBoxItem x:Name="byartist" Content="Par artiste" IsSelected="False"/>
                                    <ComboBoxItem x:Name="bygenre" Content="Par genre" IsSelected="False"/>
                                    <ComboBoxItem x:Name="bydate" Content="Par date (jj/mm/aaaa)" IsSelected="False"/>
                                </ComboBox>
                            </StackPanel>
                            <ListBox x:Name="Search" Background="Transparent" Margin="30" ItemsSource="{Binding All}" SelectionChanged="ListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Height="50" Width="50" Source="{Binding Image}"/>
                                            <TextBlock FontSize="30" Foreground="White" Text="{Binding Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </TabItem>
                </TabControl>
                <!-- Onglets -->
                
                <!-- MaPlaylist -->
                <DockPanel>
                    <TextBlock Text="Ma Playlist" Foreground="#222222" DockPanel.Dock="Top" FontSize="20"/>
                    <ListView x:Name="listBox" ItemsSource="{Binding playlist}" MouseDoubleClick="ReadFromPlaylist" MouseLeftButtonUp="SeeMusic" MouseRightButtonUp="DeleteFromPlaylist" Background="Transparent" Width="120">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="50" Width="50" Source="{Binding Image}"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}"/>
                                        <TextBlock Text="{Binding Artist}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListView>
                </DockPanel>
                <!-- MaPlaylist -->
                
            </StackPanel>
        </DockPanel>
        <!-- Corps -->

        
        
    </DockPanel>
</Window>