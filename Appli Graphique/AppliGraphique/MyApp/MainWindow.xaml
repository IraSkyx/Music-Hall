<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#222222"
        Title="Music'Hall" Height="720" Width="1080" ResizeMode="NoResize" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None">

    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,30">
            <Button x:Name="inscription" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Inscription" Content="Inscription" Width="75" Height="30" BorderThickness="0"/>
            <Button x:Name="connexion" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Connexion" Content="Connexion" Width="75" BorderThickness="0" Height="30"/>
            <Button x:Name="reduce" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Reduce" Content="―" BorderThickness="0" FontSize="20" FontFamily="Arual" Height="30" Width="60"/>
            <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Increase" Content="⇱" VerticalContentAlignment="Center" BorderThickness="0" FontSize="20" FontFamily="Arual" Height="30" Width="60"/>
            <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Exit" Content="✗" Width="60" Height="30" BorderThickness="0" FontSize="20" FontFamily="Arual"/>
        </StackPanel>

        <StackPanel Orientation="Vertical">

            <WebBrowser Margin="0,0,0,20" Height="100"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TabControl x:Name="TabControl" VerticalAlignment="Center" Margin="0,0,10,0" Height="400" Width="788" SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Header="Accueil">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Height="375">
                            <Image x:Name="image" HorizontalAlignment="Left" Source="..\resources\eFeder.jpg" Height="90"/>
                            <Image x:Name="image2" HorizontalAlignment="Left" Source="..\resources\eFeder.jpg" Height="90"/>
                            <Image x:Name="image3" HorizontalAlignment="Left" Source="..\resources\eFeder.jpg" Height="90"/>
                            <Image x:Name="image4" HorizontalAlignment="Left" Source="..\resources\eFeder.jpg" Height="90"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Sélection"></TabItem>

                    <TabItem Header="Recherche"></TabItem>

                </TabControl>

                <ListBox x:Name="listBox" Height="400" Margin="10,0,0,0" Width="148"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label x:Name="duration" Foreground="White" HorizontalContentAlignment="Center" Content="00:00"/>
                <ProgressBar x:Name="Prog" Height="5" Width="265" Background="Transparent" Foreground="White" Margin="10,0,0,10"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,0,10">
                    <Button x:Name="pause" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Pause" Content="❚❚" Margin="0,0,10,0" Height="40" Width="40" FontSize="20"/>
                    <Button x:Name="replay" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Replay" Content="⟲" Margin="10,0,0,0" Height="40" Width="40" FontSize="20"/>
                </StackPanel>
                <Slider x:Name="slider" ValueChanged="Change" TickFrequency="5"  Width="135" Value="50" Maximum="100"/>
                <Button x:Name="play" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Play" Content="Play" Width="75"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>

</Window>