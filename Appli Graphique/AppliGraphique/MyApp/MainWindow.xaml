<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#222222"      
        BorderThickness=".5"
        BorderBrush="#ECF0F1"     
        Title="Music'Hall" Height="720" Width="1080" ResizeMode="NoResize" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None" FontFamily="Microsoft YaHei Light">

    <DockPanel LastChildFill="False" Background="#222222">
        <StackPanel x:Name="Panel" DockPanel.Dock="Top" FlowDirection="RightToLeft" Orientation="Horizontal" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#222222">
            <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverQuit}" ToolTip="Fermer" Click="Exit" Content="✗" Width="60" Height="30" BorderThickness="0" FontSize="20"/>
            <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Rétablir précédent" Click="Increase" Content="⇱" VerticalContentAlignment="Center" BorderThickness="0" FontSize="20" Height="30" Width="60"/>
            <Button x:Name="reduce" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Réduire" Click="Reduce" Content="―" BorderThickness="0" FontSize="20" Height="30" Width="60"/>
            <Button x:Name="connexion" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Se connecter" Click="Connexion" Content="Connexion" Width="100" BorderThickness="0" Height="30"/>
            <Button x:Name="inscription" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="S'inscrire" Click="Inscription" Content="Inscription" Width="100" Height="30" BorderThickness="0"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Height="Auto" HorizontalAlignment="Stretch">

            <ScrollViewer x:Name="scrollviewer" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Width="Auto">
                <ListBox x:Name="scroller" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionChanged="scroller_SelectionChanged" HorizontalAlignment="Center" Height="100" ItemsSource="{Binding All}" Margin="10,30" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Image Height="50" Width="50" Source="{Binding Image}"/>
                                <Label Content="{Binding Title}" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TabControl x:Name="TabControl" VerticalAlignment="Center" Width="788" Height="300" BorderThickness="0" Margin="0,0,30,0" Background="#303030">

                    <TabItem Header="Accueil" Width="100" Foreground="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel x:Name="hall" Margin="20"  VerticalAlignment="Bottom" MouseUp="StackPanel_MouseUp">
                                <TextBlock Text="Top 1 Music'Hall" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
                                <Image Source="{StaticResource aintme}" Width="150" ToolTip="Cliquer pour + d'infos"/>
                            </StackPanel>
                            <StackPanel x:Name="world" Margin="20" Grid.Column="1" VerticalAlignment="Top" MouseUp="StackPanel_MouseUp">
                                <Image Source="{StaticResource feder}" Width="150" ToolTip="Cliquer pour + d'infos"/>
                                <TextBlock Text="Top 1 World" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="france" Margin="20" Grid.Column="2" VerticalAlignment="Center" MouseUp="StackPanel_MouseUp">
                                <TextBlock Text="Top 1 France" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
                                <Image Source="{StaticResource paris}" Width="150" ToolTip="Cliquer pour + d'infos"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Sélection" Width="100" Foreground="White">
                        <Grid x:Name="Selection">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.ColumnSpan="2" Margin="30">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Height="120" Source="{Binding ElementName=scroller, Path=SelectedItem.Image}">
                                    <Image.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" ShadowDepth="10" Softness="1" Opacity="0.5"/>
                                    </Image.BitmapEffect>
                                </Image>
                                <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Title}" FontSize="20" Margin="0,20,0,10" Foreground="White"/>
                                <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Artist}" Foreground="White"/>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" Grid.Column="2" Margin="0,36">
                                <TabControl Width="300" Height="150" Background="#343434">
                                    <TabItem Header="Infos" Width="60" Foreground="White">
                                        <StackPanel>
                                            <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Infos}" Margin="30" FontSize="20" Foreground="White"/>
                                            <TextBlock Text="{Binding ElementName=scroller, Path=SelectedItem.Date}" Margin="30" FontSize="20" Foreground="White"/>
                                        </StackPanel>
                                    </TabItem>
                                    <TabItem Header="Etc" Width="60" Foreground="White"/>
                                    <TabItem Header="Etc" Width="60" Foreground="White"/>
                                </TabControl>
                                <Button Content="lecture" Click="Play"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Recherche" Width="100" Foreground="White">
                        <StackPanel Margin="10">
                            <TextBox x:Name="Input" Width="300" Height="25" TextChanged="TextBox_TextChanged"/>
                            <ListBox x:Name="Search" Background="Transparent" Height="150" Margin="30" SelectionChanged="ListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Height="50" Width="50" Source="{Binding Image}"/>
                                            <Label Content="{Binding Title}" Foreground="White"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </TabItem>

                </TabControl>

                <ListBox x:Name="listBox" Width="150" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label/>
                                <Label/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="FullPlayer" DockPanel.Dock="Bottom" Background="#303030">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="Currently" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="image" Width="60" Height="60"/>
                    <TextBlock x:Name="title" Foreground="White" FontSize="15"/>
                    <TextBlock x:Name="artist" Foreground="White" FontSize="10"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="duration" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
                        <ProgressBar x:Name="Prog" Height="5" Width="350" Value="0" Background="Transparent" Margin="10" Foreground="White"/>
                        <TextBlock x:Name="duration2" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="previous" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="Previous" ToolTip="Précédent" Content="◀◀" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="random" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="SetRandom" ToolTip="Lecture aléatoire" Content="∞" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="PausePlay" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="PausePlay_Click" ToolTip="Lecture" Content="▶" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="replay" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="Replay" ToolTip="Lecture en boucle" Content="⟲" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="next" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" Click="Next" ToolTip="Suivant" Content="▶▶" Width="50" Height="50" FontSize="22"/>
                    </StackPanel>
                    <Slider x:Name="slider" Width="135" Value="{Binding Volume}" Minimum="0" Maximum="1" ToolTip = "Modifier le volume" Margin="0,10,0,10" IsMoveToPointEnabled="True"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>