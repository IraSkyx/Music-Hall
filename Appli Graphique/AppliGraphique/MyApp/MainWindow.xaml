<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#222222"
        Title="Music'Hall" Height="720" Width="1080" ResizeMode="NoResize" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None">
   
    <Grid>
        
        <Button x:Name="connexion" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Connexion" Content="Connexion" HorizontalAlignment="Left" Margin="810,0,0,0" VerticalAlignment="Top" Width="75" BorderThickness="0" Height="30"/>
        <Button x:Name="inscription" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Click="Inscription" Content="Inscription" HorizontalAlignment="Left" Margin="885,0,0,0" VerticalAlignment="Top" Width="75" Height="30" BorderThickness="0"/>
        <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Content="X" Click="Exit" HorizontalAlignment="Left" Margin="1020,0,0,0" VerticalAlignment="Top" Width="60" Height="30" BorderThickness="0" FontSize="20" FontFamily="Arual"/>
        <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource Over}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Content="+" Click="Increase" BorderThickness="0" FontSize="20" FontFamily="Bebas Neue" RenderTransformOrigin="0.553,0.083" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" Margin="0,0,60,0"/>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="100" Margin="0,620,0,0" Stroke="Black" VerticalAlignment="Top" Width="1080"/>
        <Button x:Name="button" Content="Lecture" HorizontalAlignment="Left" Margin="410,675,0,0" VerticalAlignment="Top" Width="75" Click="Play"/>
        <Button x:Name="button_Copy" Content="Pause" HorizontalAlignment="Left" Margin="500,675,0,0" VerticalAlignment="Top" Width="75" Click="Pause"/>
        <Button x:Name="button_Copy1" Content="Replay" HorizontalAlignment="Left" Margin="600,675,0,0" VerticalAlignment="Top" Width="75" Click="Replay"/>
        <Slider x:Name="slider" IsSnapToTickEnabled="True" TickFrequency="5" ValueChanged="Change" HorizontalAlignment="Left" Margin="735,675,0,0" VerticalAlignment="Top" Width="135" Value="50" Maximum="100"/>
        <ProgressBar Name="Prog" HorizontalAlignment="Left" Height="10" Margin="410,655,0,0" VerticalAlignment="Top" Width="265" SmallChange="1"/>
        <Label x:Name="duration" Content="00:00:00" HorizontalAlignment="Left" Margin="515,629,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="375" Margin="922,211,0,0" VerticalAlignment="Top" Width="148"/>

        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="505" VerticalAlignment="Top" Width="885" SelectionChanged="tabControl_SelectionChanged" Margin="20,97,0,0">
            <TabItem Header="Artise1"></TabItem>

            <TabItem Header="Artiste2"></TabItem>

            <TabItem Header="Artiste3"></TabItem>

            <DataGrid x:Name="dataGrid" Height="100" Width="100"/>
        </TabControl>

    </Grid>
    
</Window>
