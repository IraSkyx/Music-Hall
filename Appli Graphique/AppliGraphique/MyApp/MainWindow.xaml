<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#ECF0F1" 
        Title="Music'Hall" Height="720" Width="1080" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Foreground="White" FontFamily="Microsoft YaHei Light">
    <Window.Resources>
        <local:ScaleConverter x:Key="ScaleConverter"/>
    </Window.Resources>
    <DockPanel>
        <!--En-tête-->
        <StackPanel x:Name="Panel" DockPanel.Dock="Top" FlowDirection="RightToLeft" Orientation="Horizontal" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#222222">
            <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverQuit}" ToolTip="Fermer" Click="Exit" Content="✗" Width="60" FontSize="20" BorderThickness="0"/>
            <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Rétablir précédent" Click="Increase" Content="⇱" Width="60" FontSize="20" BorderThickness="0" />
            <Button x:Name="reduce" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Réduire" Click="Reduce" Content="―" FontSize="20" Width="60" BorderThickness="0"/>
            <Button x:Name="connexion" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Se connecter" Click="Connexion" Content="Connexion" Width="100" BorderThickness="0"/>
            <Button x:Name="inscription" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="S'inscrire" Click="Inscription" Content="Inscription" Width="100" BorderThickness="0"/>
        </StackPanel>
        <!--En-tête-->

        <!-- Lecteur -->
        <local:Lecteur DockPanel.Dock="Bottom" x:Name="lecteur"/>
        <!-- Lecteur -->

        <!-- Corps -->
        <DockPanel x:Name="Body">

            <ListView x:Name="scroller" DockPanel.Dock="Top" Style="{StaticResource HorizontalListbox}" MouseDoubleClick="Play" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" ItemsSource="{Binding PlaylistProperty}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionChanged="scroller_SelectionChanged" Height="100" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image Height="50" Width="50" Source="{Binding Image}"/>
                            <TextBlock Text="{Binding Title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListView>
            <!-- MaPlaylist -->
            <DockPanel DockPanel.Dock="Right" Margin="10">
                <TextBlock Text="Ma Playlist" Foreground="#222222" DockPanel.Dock="Top" FontSize="20"/>
                <ListView x:Name="listBox" ItemsSource="{Binding PlaylistProperty}" MouseDoubleClick="ReadFromPlaylist" MouseLeftButtonUp="SeeMusic" MouseRightButtonUp="DeleteFromPlaylist" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Height="50" Width="50" Source="{Binding Image}"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"/>
                                    <TextBlock Text="{Binding Artist}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </DockPanel>
            <!-- MaPlaylist -->
            
            <!-- Onglets -->
            <TabControl x:Name="Tab" BorderThickness="0">
                <TabItem Header="Accueil" Foreground="White" FontFamily="Microsoft YaHei UI" Margin="-3,0,3,0">
                    <local:Home x:Name="xHome"/>
                </TabItem>
                <TabItem Header="Sélection" FontFamily="Microsoft YaHei UI" Foreground="White" Margin="-4,0,4,0">
                    <local:Selection x:Name="xSelection" DataContext="{Binding ElementName=scroller, Path=SelectedItem}"/>
                </TabItem>
                <TabItem Header="Recherche" FontFamily="Microsoft YaHei UI" Foreground="White" Margin="-5,0,5,0">
                    <local:Recherche x:Name="xSearch"/>
                </TabItem>
            </TabControl>
            <!-- Onglets -->          

        </DockPanel>
        <!-- Corps -->
       
    </DockPanel>
</Window>