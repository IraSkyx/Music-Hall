<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#222222"      
        BorderThickness=".5"
        BorderBrush="#ECF0F1"     
        Title="Music'Hall" Height="720" Width="1080" ResizeMode="NoResize" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None">

    <DockPanel LastChildFill="False" Background="#ECF0F1">
        <StackPanel x:Name="Panel" DockPanel.Dock="Top" FlowDirection="RightToLeft" Orientation="Horizontal" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#222222">
            <Button x:Name="quit" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverQuit}" ToolTip="Fermer" Click="Exit" Content="✗" Width="60" Height="30" BorderThickness="0" FontSize="20" FontFamily="Arual"/>
            <Button x:Name="increase" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Rétablir précédent" Click="Increase" Content="⇱" VerticalContentAlignment="Center" BorderThickness="0" FontSize="20" FontFamily="Arual" Height="30" Width="60"/>
            <Button x:Name="reduce" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Réduire" Click="Reduce" Content="―" BorderThickness="0" FontSize="20" FontFamily="Arual" Height="30" Width="60"/>
            <Button x:Name="connexion" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="Se connecter" Click="Connexion" Content="Connexion" Width="75" BorderThickness="0" Height="30"/>
            <Button x:Name="inscription" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverMenu}" ToolTip="S'inscrire" Click="Inscription" Content="Inscription" Width="75" Height="30" BorderThickness="0"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Height="Auto" HorizontalAlignment="Stretch">

            <WebBrowser Margin="0,0,0,20" Height="100"/>

            <StackPanel Orientation="Horizontal" Height="300" HorizontalAlignment="Center">
                <TabControl x:Name="TabControl" VerticalAlignment="Center" Width="788" SelectionChanged="TabControl_SelectionChanged">

                    <TabItem Header="Accueil"></TabItem>

                    <TabItem Header="Sélection"></TabItem>

                    <TabItem Header="Recherche"></TabItem>

                </TabControl>

                <ListBox x:Name="listBox" ItemsSource="{Binding View}" Width="150">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label Foreground="Black" Content="{Binding titre}"/>
                                <Label Foreground="Black" Content="{Binding artiste}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Background="#222222">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="image" Width="60" Height="60"/>
                    <Label x:Name="title" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                    <Label x:Name="artist" Foreground="White" HorizontalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label x:Name="duration" Foreground="White" HorizontalContentAlignment="Center" Content="00:00:00"/>
                        <ProgressBar x:Name="Prog" Height="5" Width="350" Background="Transparent" Foreground="White"/>
                        <Label x:Name="duration2" Foreground="White" HorizontalContentAlignment="Center" Content="00:00:00"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                        <Button x:Name="previous" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" ToolTip="Précédent" Content="◀◀" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="random" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" ToolTip="Lecture aléatoire" Content="∞" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="PausePlay" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" ToolTip="Lecture" Content="▶" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="replay" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" ToolTip="Lecture en boucle" Content="⟲" Width="50" Height="50" FontSize="22"/>
                        <Button x:Name="next" Style="{StaticResource ButtonStyle}" Template="{StaticResource OverButton}" ToolTip="Suivant" Content="▶▶" Width="50" Height="50" FontSize="22"/>
                    </StackPanel>
                    <MediaElement Name="Player" LoadedBehavior="Manual" UnloadedBehavior="Stop" />
                    <Slider x:Name="slider" ValueChanged="Change" TickFrequency="5"  Width="135" Value="50" Maximum="100" ToolTip = "Modifier le volume" Margin="0,10,0,10"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>