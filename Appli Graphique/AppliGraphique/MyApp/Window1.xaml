<Window x:Class="MyApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Background="#222222"
        Title="Connexion" Height="500" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button x:Name="quit" Grid.Column="0" Content="X" Click="Exit" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="58" Height="30" BorderThickness="0" FontSize="20" FontFamily="Arual" RenderTransformOrigin="0.553,0.083" Margin="234,0,0,0">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFAE322E" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label x:Name="label" Grid.Column="0" Grid.Row="0" Content="Se connecter" Foreground="White" HorizontalAlignment="Left" Margin="58,58,0,0" VerticalAlignment="Top" Height="63" Width="194" FontWeight="Bold" FontSize="30" FontStyle="Italic"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Grid.Row="1" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="120" Margin="162,10,0,0"/>
        <Label x:Name="label1" Content="Identifiant" Grid.Row="1" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="120" Margin="10,10,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="162,55,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="23"/>
        <Label x:Name="label2" Content="Mot de passe" Foreground="White" HorizontalAlignment="Left" Margin="10,55,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="23"/>
        <Button x:Name="button" Content="Valider" Margin="108,10,108,0" Grid.Row="2" VerticalAlignment="Top"/>
    </Grid>
</Window>